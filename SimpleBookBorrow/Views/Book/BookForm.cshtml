@model SimpleBookBorrow.Models.Books

@{
    ViewBag.Title = "BookForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Add New Book</h4>
<form action="#" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-4">Book Name</label>
        <input class="form-control col-sm-6" id="bookname" type="text" required/>
        @*<label style="display:none" id="Error_BookName" class="col-sm-8 control-label" for="inputError">
            Invalid Book Name
        </label>*@
    </div>

    <div class="form-group">
        <label class="control-label col-sm-4">Author Name</label>
        <input class="form-control col-sm-6" id="authorname" type="text" required />
        @*<label style="display:none" id="Error_authorName" class="col-sm-8 control-label" for="inputError">
            Invalid Author Name
        </label>*@
    </div>

    <div class="form-group">
        <label class="control-label col-sm-4">Num# Avilabel Book</label>
        <input class="form-control col-sm-6" id="bookno" type="number" required />
        @*<label style="display:none" id="Error_BookNo" class="col-sm-8 control-label" for="inputError">
            Invalid Book Numbers
        </label>*@
    </div>

        <div class="form-group">
        <label class="control-label col-sm-4">Book Type</label>
        <input class="form-control col-sm-6" id="booktype" type="text" required />
        @*<label style="display:none" id="Error_Booktype" class="col-sm-8 control-label" for="inputError">
            Invalid Book Type
        </label>*@
    </div>

    <div>
        <input type="hidden" id="book_Id" />
    </div>

    <div class="form-group">
        <div class="col-sm-4"></div>
        <input type="button" class="btn btn-success col-sm-6" value="Save" />
    </div>
</form>



<h2>All Books</h2>

<table class="table table-hover table-bordered table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author Name</th>
            <th>Avilable Books</th>
            <th>Book Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/Book_JqueryAjax/Book_Scripte.js"></script>

